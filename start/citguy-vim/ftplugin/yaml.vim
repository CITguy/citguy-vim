" ensure 2 spaces per tab
setl ts=2
setl sts=2
setl sw=2
setl expandtab
setl foldignore=

" allow wrapping, to allow for editing markdown text within YAML values.
setl wrap

" wrapped content will continue visually indented (same amount of space as the
" beginning of that line), thus preserving horizontal blocks of text.
setl breakindent

" smart line breaks with wrapping on
setl linebreak
